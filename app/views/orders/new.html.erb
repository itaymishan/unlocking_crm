<%= link_to 'View Orders', controller: 'orders' %>
<br>
<a href="/orders/new">New Order</a>
<br>

<h1> New Order </h1>

<%= form_for @order, url: {action: "create"} do |f| %>
  <%= f.label :imei %>
  <%= f.text_field :imei %>
  <br>
  <%= f.label :customer_email %>
  <%= f.text_field :customer_email %>
  <br>
  <%= f.label :customer_name %>
  <%= f.text_field :customer_name %>
  <br>
  <%= f.submit "Create" %>
<% end %>
